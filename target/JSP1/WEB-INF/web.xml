<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>RegistUser</servlet-name>
    <servlet-class>io.github.potatob6.Servlets.RegistUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddBook</servlet-name>
    <servlet-class>io.github.potatob6.Servlets.AddBook</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddBookClass</servlet-name>
    <servlet-class>io.github.potatob6.Servlets.AddBookClass</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>QueryUser</servlet-name>
    <servlet-class>io.github.potatob6.Servlets.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SecretChangeServlet</servlet-name>
    <servlet-class>io.github.yywl5.Servlets.SecretChangeServlet</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>CloudManageAll</servlet-name>
        <servlet-class>io.github.yywl5.Servlets.CloudManageAll</servlet-class>
    </servlet>
  <servlet>
    <servlet-name>ManagerMent</servlet-name>
    <servlet-class>io.github.yywl5.Servlets.ManagerMent</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DownListServlet</servlet-name>
    <servlet-class>io.github.yywl5.Servlets.DownListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownListServlet</servlet-name>
    <url-pattern>/DownListServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadServlet</servlet-name>
    <servlet-class>io.github.yywl5.Servlets.UploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadServlet</servlet-name>
    <url-pattern>/UploadServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DownServlet</servlet-name>
    <servlet-class>io.github.yywl5.Servlets.DownServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownServlet</servlet-name>
    <url-pattern>/DownServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ManagerMent</servlet-name>
    <url-pattern>/ManagerMent</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>CloudManageAll</servlet-name>
    <url-pattern>/CloudManageAll</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>SecretChangeServlet</servlet-name>
    <url-pattern>/SecretChangeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegistUser</servlet-name>
    <url-pattern>/regist</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddBook</servlet-name>
    <url-pattern>/addBook</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddBookClass</servlet-name>
    <url-pattern>/addbookclass</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>QueryUser</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>ChineseFilter</filter-name>
    <filter-class>io.github.potatob6.Filters.ChineseFilter</filter-class>
  </filter>
  <filter>
    <filter-name>RegistFilter</filter-name>
    <filter-class>io.github.potatob6.Filters.RegistFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AddBookFilter</filter-name>
    <filter-class>io.github.potatob6.Filters.AddBookFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AddBookClassFilter</filter-name>
    <filter-class>io.github.potatob6.Filters.AddBookClassFilter</filter-class>
  </filter>
  <filter>
    <filter-name>QueryUser</filter-name>
    <filter-class>io.github.potatob6.Filters.LoginFilter</filter-class>
  </filter>
<!--  登录过滤器-->

  <filter-mapping>
    <filter-name>AddBookFilter</filter-name>
    <url-pattern>/addBook</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RegistFilter</filter-name>
    <url-pattern>/regist</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ChineseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AddBookClassFilter</filter-name>
    <url-pattern>/addbookclass</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>QueryUser</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
</web-app>
